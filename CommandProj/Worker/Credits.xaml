<Window x:Class="CommandProj.Worker.Credits"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreditFlow - Кредитный отдел" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <Window.Resources>
        <!-- Стили из предыдущего кода -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="100"/>
        </Style>

        <!-- Стиль для заголовков разделов -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Стиль для строк таблицы -->
        <Style x:Key="ApplicationRow" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковая панель -->
        <Border Background="#2C3E50" Grid.Column="0">
            <StackPanel Margin="15">
                <!-- Профиль сотрудника -->
                <Border Background="#34495E" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <Ellipse Width="80" Height="80" Fill="#3498DB" HorizontalAlignment="Center">
                            <Ellipse.Stroke>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FFFFFF" Offset="0"/>
                                    <GradientStop Color="#BDC3C7" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>
                        <TextBlock Text="Иван Сидоров" Foreground="White" FontSize="16" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,10,0,5"/>
                        <TextBlock Text="Кредитный менеджер" Foreground="#BDC3C7" FontSize="12"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Меню кредитного отдела -->
                <StackPanel>
                    
                    <Button Content="👥 Клиенты" Style="{StaticResource RoundedButton}" Background="Transparent" 
                            Foreground="White" BorderBrush="#BDC3C7" BorderThickness="1" HorizontalAlignment="Stretch"/>
                    <Button Content="📊 Обзор" Style="{StaticResource RoundedButton}" Background="Transparent" 
        Foreground="White" BorderBrush="#BDC3C7" BorderThickness="1" HorizontalAlignment="Stretch"/>
                    <Button Content="👥 Клиенты" Style="{StaticResource RoundedButton}" Background="Transparent" 
        Foreground="White" HorizontalAlignment="Stretch"/>

                    <Button Content="💰 Кредиты" Style="{StaticResource RoundedButton}" Background="#3498DB" 
        Foreground="White" BorderBrush="#BDC3C7" BorderThickness="1" HorizontalAlignment="Stretch"/>
                    <Button Content="📈 Аналитика" Style="{StaticResource RoundedButton}" Background="Transparent" 
        Foreground="White" BorderBrush="#BDC3C7" BorderThickness="1" HorizontalAlignment="Stretch"/>
                    <Button Content="⚙️ Настройки" Style="{StaticResource RoundedButton}" Background="Transparent" 
        Foreground="White" BorderBrush="#BDC3C7" BorderThickness="1" HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Быстрая статистика -->
                <Border Style="{StaticResource CardStyle}" Background="#34495E" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Моя статистика" Foreground="White" FontWeight="Bold" FontSize="14"/>
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Заявок сегодня: 8" Foreground="#27AE60" FontSize="12"/>
                            <TextBlock Text="Одобрено: 75%" Foreground="#3498DB" FontSize="12"/>
                            <TextBlock Text="Средняя сумма: ₽ 450К" Foreground="#F39C12" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Заголовок и фильтры -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Управление кредитными заявками" FontWeight="Bold" FontSize="20" Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="➕ Новая заявка" Style="{StaticResource RoundedButton}" Background="#27AE60"/>
                            <ComboBox Width="150" Margin="10,0,10,0" SelectedIndex="0">
                                <ComboBoxItem Content="Все статусы"/>
                                <ComboBoxItem Content="Новые"/>
                                <ComboBoxItem Content="В работе"/>
                                <ComboBoxItem Content="Одобренные"/>
                                <ComboBoxItem Content="Отклоненные"/>
                            </ComboBox>
                            <ComboBox Width="200" Margin="0,0,10,0" SelectedIndex="0">
                                <ComboBoxItem Content="Все менеджеры"/>
                                <ComboBoxItem Content="Мои заявки"/>
                            </ComboBox>
                            <TextBox Width="200" Padding="5" Text="Поиск по клиенту..." Foreground="Gray">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="Text" Value=""/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Content="🔍 Поиск" Style="{StaticResource RoundedButton}" Background="#3498DB" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Ключевые метрики -->
                <TextBlock Text="Рабочие показатели" Style="{StaticResource SectionHeader}" Margin="0,20,0,0"/>

                <UniformGrid Columns="4" Rows="1" Margin="0,0,0,20">
                    <Border Style="{StaticResource MetricCard}" Background="#E3F2FD">
                        <StackPanel>
                            <TextBlock Text="Новых заявок" Foreground="#7F8C8D" FontSize="12"/>
                            <TextBlock Text="12" Foreground="#1565C0" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="+2 с утра" Foreground="#3498DB" FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MetricCard}" Background="#E8F5E9">
                        <StackPanel>
                            <TextBlock Text="На одобрении" Foreground="#7F8C8D" FontSize="12"/>
                            <TextBlock Text="₽ 3.4 млн" Foreground="#2E7D32" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="5 заявок" Foreground="#27AE60" FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MetricCard}" Background="#FFF3E0">
                        <StackPanel>
                            <TextBlock Text="Среднее время" Foreground="#7F8C8D" FontSize="12"/>
                            <TextBlock Text="2.4 ч" Foreground="#EF6C00" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="-0.3 ч к прошлой неделе" Foreground="#F39C12" FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MetricCard}" Background="#FBE9E7">
                        <StackPanel>
                            <TextBlock Text="Конверсия" Foreground="#7F8C8D" FontSize="12"/>
                            <TextBlock Text="68%" Foreground="#D84315" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="Цель: 70%" Foreground="#E74C3C" FontSize="11"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Список заявок -->
                <TextBlock Text="Последние заявки" Style="{StaticResource SectionHeader}"/>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <!-- Заголовок таблицы -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="№" FontWeight="Bold" Grid.Column="0"/>
                            <TextBlock Text="Клиент" FontWeight="Bold" Grid.Column="1" Margin="10,0,0,0"/>
                            <TextBlock Text="Тип кредита" FontWeight="Bold" Grid.Column="2"/>
                            <TextBlock Text="Сумма" FontWeight="Bold" Grid.Column="3"/>
                            <TextBlock Text="Ставка" FontWeight="Bold" Grid.Column="4"/>
                            <TextBlock Text="Статус" FontWeight="Bold" Grid.Column="5"/>
                            <TextBlock Text="Действия" FontWeight="Bold" Grid.Column="6"/>
                        </Grid>

                        <!-- Строки заявок -->
                        <StackPanel>
                            <!-- Заявка 1 -->
                            <Border Style="{StaticResource ApplicationRow}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" MinWidth="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="#24578" Grid.Column="0"/>
                                    <TextBlock Text="Петров А.В." Grid.Column="1" Margin="10,0,0,0"/>
                                    <TextBlock Text="Ипотека" Grid.Column="2"/>
                                    <TextBlock Text="₽ 2,100,000" Grid.Column="3"/>
                                    <TextBlock Text="11.5%" Grid.Column="4"/>
                                    <TextBlock Text="На проверке" Foreground="#F39C12" FontWeight="Bold" Grid.Column="5"/>
                                    <StackPanel Orientation="Horizontal" Grid.Column="6">
                                        <Button Content="👁" Style="{StaticResource RoundedButton}" Background="#3498DB" 
                                                Padding="5" FontSize="10" ToolTip="Просмотр"/>
                                        <Button Content="✅" Style="{StaticResource RoundedButton}" Background="#27AE60" 
                                                Padding="5" FontSize="10" Margin="5,0,0,0" ToolTip="Одобрить"/>
                                        <Button Content="❌" Style="{StaticResource RoundedButton}" Background="#E74C3C" 
                                                Padding="5" FontSize="10" Margin="5,0,0,0" ToolTip="Отклонить"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Заявка 2 -->
                            <Border Style="{StaticResource ApplicationRow}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" MinWidth="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="#24579" Grid.Column="0"/>
                                    <TextBlock Text="Иванова Е.С." Grid.Column="1" Margin="10,0,0,0"/>
                                    <TextBlock Text="Автокредит" Grid.Column="2"/>
                                    <TextBlock Text="₽ 850,000" Grid.Column="3"/>
                                    <TextBlock Text="13.2%" Grid.Column="4"/>
                                    <TextBlock Text="Одобрено" Foreground="#27AE60" FontWeight="Bold" Grid.Column="5"/>
                                    <StackPanel Orientation="Horizontal" Grid.Column="6">
                                        <Button Content="👁" Style="{StaticResource RoundedButton}" Background="#3498DB" 
                                                Padding="5" FontSize="10" ToolTip="Просмотр"/>
                                        <Button Content="📋" Style="{StaticResource RoundedButton}" Background="#9B59B6" 
                                                Padding="5" FontSize="10" Margin="5,0,0,0" ToolTip="Договор"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Заявка 3 -->
                            <Border Style="{StaticResource ApplicationRow}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" MinWidth="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="#24580" Grid.Column="0"/>
                                    <TextBlock Text="Сидоров М.К." Grid.Column="1" Margin="10,0,0,0"/>
                                    <TextBlock Text="Потребкредит" Grid.Column="2"/>
                                    <TextBlock Text="₽ 120,000" Grid.Column="3"/>
                                    <TextBlock Text="16.8%" Grid.Column="4"/>
                                    <TextBlock Text="Отклонено" Foreground="#E74C3C" FontWeight="Bold" Grid.Column="5"/>
                                    <StackPanel Orientation="Horizontal" Grid.Column="6">
                                        <Button Content="👁" Style="{StaticResource RoundedButton}" Background="#3498DB" 
                                                Padding="5" FontSize="10" ToolTip="Просмотр"/>
                                        <Button Content="📝" Style="{StaticResource RoundedButton}" Background="#F39C12" 
                                                Padding="5" FontSize="10" Margin="5,0,0,0" ToolTip="Пересмотреть"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Пагинация -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button Content="← Назад" Style="{StaticResource RoundedButton}" Background="Transparent" 
                                    BorderBrush="#BDC3C7" BorderThickness="1"/>
                            <Button Content="1" Style="{StaticResource RoundedButton}" Background="#3498DB" 
                                    Margin="5,0" Padding="8"/>
                            <Button Content="2" Style="{StaticResource RoundedButton}" Background="Transparent" 
                                    BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,5,0" Padding="8"/>
                            <Button Content="3" Style="{StaticResource RoundedButton}" Background="Transparent" 
                                    BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,5,0" Padding="8"/>
                            <Button Content="Вперед →" Style="{StaticResource RoundedButton}" Background="Transparent" 
                                    BorderBrush="#BDC3C7" BorderThickness="1"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Графики и статистика -->
                <TextBlock Text="Оперативная статистика" Style="{StaticResource SectionHeader}" Margin="0,20,0,0"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- График заявок по дням -->
                    <Border Style="{StaticResource CardStyle}" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                        <StackPanel>
                            <TextBlock Text="Заявки по дням недели" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Border Background="#F5F5F5" Height="200" CornerRadius="5">
                                <TextBlock Text="[График заявок]" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#7F8C8D"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Статусы заявок -->
                    <Border Style="{StaticResource CardStyle}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Статусы заявок" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#F5F5F5" Height="150" Width="150" CornerRadius="75" Grid.Column="0"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="[Диаграмма]" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#7F8C8D"/>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="10" Height="10" Fill="#3498DB" Margin="0,0,5,0"/>
                                        <TextBlock Text="Новые: 25%" FontSize="11"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <Rectangle Width="10" Height="10" Fill="#F39C12" Margin="0,0,5,0"/>
                                        <TextBlock Text="В работе: 40%" FontSize="11"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <Rectangle Width="10" Height="10" Fill="#27AE60" Margin="0,0,5,0"/>
                                        <TextBlock Text="Одобрено: 25%" FontSize="11"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <Rectangle Width="10" Height="10" Fill="#E74C3C" Margin="0,0,5,0"/>
                                        <TextBlock Text="Отклонено: 10%" FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Эффективность менеджеров -->
                    <Border Style="{StaticResource CardStyle}" Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Топ менеджеров" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Border Background="#F5F5F5" Height="150" CornerRadius="5">
                                <TextBlock Text="[График эффективности]" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#7F8C8D"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Быстрые действия -->
                    <Border Style="{StaticResource CardStyle}" Grid.Row="1" Grid.Column="1">
                        <StackPanel>
                            <TextBlock Text="Быстрые действия" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Button Content="📄 Создать шаблон договора" Style="{StaticResource RoundedButton}" 
                                    Background="#9B59B6" HorizontalAlignment="Stretch" Margin="0,0,0,5"/>
                            <Button Content="📊 Сформировать отчет" Style="{StaticResource RoundedButton}" 
                                    Background="#3498DB" HorizontalAlignment="Stretch" Margin="0,5,0,5"/>
                            <Button Content="⏰ Напомнить о просрочке" Style="{StaticResource RoundedButton}" 
                                    Background="#F39C12" HorizontalAlignment="Stretch" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>