<Window x:Class="CommandProj.Worker.information"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreditFlow - Панель сотрудника" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <Window.Resources>
        <!-- Стили из вашего кода -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Стиль для строк таблицы -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="0 0 0 1"/>
        </Style>

        <!-- Стиль для TextBox с закругленными углами -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковая панель -->
        <Border Background="#2C3E50" Grid.Column="0">
            <StackPanel Margin="15">
                <!-- Профиль сотрудника -->
                <Border Background="#34495E" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <Ellipse Width="80" Height="80" Fill="#3498DB" HorizontalAlignment="Center">
                            <Ellipse.Stroke>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FFFFFF" Offset="0"/>
                                    <GradientStop Color="#BDC3C7" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>
                        <TextBlock Text="Мария Петрова" Foreground="White" FontSize="16" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,10,0,5"/>
                        <TextBlock Text="Старший кредитный специалист" Foreground="#BDC3C7" FontSize="12"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="ID: 12345" Foreground="#BDC3C7" FontSize="11" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Меню -->
                <StackPanel>
                    <Button Content="📊 Обзор" Style="{StaticResource RoundedButton}" Background="Transparent" 
                            Foreground="White" BorderBrush="#BDC3C7" BorderThickness="1" HorizontalAlignment="Stretch"/>
                    <Button Content="👥 Клиенты" Style="{StaticResource RoundedButton}" Background="#3498DB" 
                            Foreground="White" HorizontalAlignment="Stretch"/>
                   
                    <Button Content="💰 Кредиты" Style="{StaticResource RoundedButton}" Background="Transparent" 
                            Foreground="White" BorderBrush="#BDC3C7" BorderThickness="1" HorizontalAlignment="Stretch"/>
                    <Button Content="📈 Аналитика" Style="{StaticResource RoundedButton}" Background="Transparent" 
                            Foreground="White" BorderBrush="#BDC3C7" BorderThickness="1" HorizontalAlignment="Stretch"/>
                    <Button Content="⚙️ Настройки" Style="{StaticResource RoundedButton}" Background="Transparent" 
                            Foreground="White" BorderBrush="#BDC3C7" BorderThickness="1" HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Статистика за сегодня -->
                <Border Style="{StaticResource CardStyle}" Background="#34495E" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Сегодня" Foreground="White" FontWeight="Bold" FontSize="14"/>
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Одобрено: 8" Foreground="#27AE60" FontSize="12"/>
                            <TextBlock Text="Отклонено: 3" Foreground="#E74C3C" FontSize="12"/>
                            <TextBlock Text="На рассмотрении: 5" Foreground="#F39C12" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Панель поиска и действий -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Управление клиентами" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="SearchTextBox" Style="{StaticResource RoundedTextBox}" 
                                     Text="Поиск клиентов по ФИО, ID или телефону..." 
                                     Foreground="Gray" Margin="0,0,10,0"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="➕ Новый клиент" Style="{StaticResource RoundedButton}" Background="#27AE60"/>
                                <Button Content="📋 Новая заявка" Style="{StaticResource RoundedButton}" Background="#3498DB"/>
                                <Button Content="🔄 Обновить" Style="{StaticResource RoundedButton}" Background="#7F8C8D"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Таблица клиентов -->
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Список клиентов" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                        <DataGrid x:Name="ClientsDataGrid" AutoGenerateColumns="False" 
                                 HeadersVisibility="Column" RowStyle="{StaticResource DataGridRowStyle}"
                                 Height="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Width="60" Binding="{Binding ClientId}"/>
                                <DataGridTextColumn Header="ФИО" Width="200" Binding="{Binding FullName}"/>
                                <DataGridTextColumn Header="Телефон" Width="120" Binding="{Binding Phone}"/>
                                <DataGridTextColumn Header="Кредитный рейтинг" Width="100" Binding="{Binding CreditScore}"/>
                                <DataGridTextColumn Header="Активные кредиты" Width="100" Binding="{Binding ActiveLoans}"/>
                                <DataGridTextColumn Header="Общая задолженность" Width="120" Binding="{Binding TotalDebt}"/>
                                <DataGridTemplateColumn Header="Действия" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="👁️ Просмотр" Style="{StaticResource RoundedButton}" 
                                                    Background="#3498DB" FontSize="10" Padding="5"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Детали выбранного клиента -->
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Детальная информация о клиенте" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Основная информация -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Иван Иванов" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="ID: CLIENT-001" Foreground="#7F8C8D"/>
                                <TextBlock Text="+7 (999) 123-45-67" Margin="0,5,0,0"/>
                                <TextBlock Text="ivanov@email.com"/>
                            </StackPanel>

                            <!-- Кредитная информация -->
                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Кредитный рейтинг:" FontWeight="Bold" Width="150"/>
                                    <TextBlock Text="Отличный" Foreground="#27AE60"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Общая задолженность:" FontWeight="Bold" Width="150"/>
                                    <TextBlock Text="₽ 2,156,780.00" Foreground="#E74C3C"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Активных кредитов:" FontWeight="Bold" Width="150"/>
                                    <TextBlock Text="4"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Действия -->
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                <Button Content="📝 Новая заявка" Style="{StaticResource RoundedButton}" Background="#3498DB"/>
                                <Button Content="📊 История" Style="{StaticResource RoundedButton}" Background="#9B59B6"/>
                                <Button Content="✏️ Редактировать" Style="{StaticResource RoundedButton}" Background="#F39C12"/>
                                <Button Content="📄 Документы" Style="{StaticResource RoundedButton}" Background="#7F8C8D"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Быстрая статистика -->
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Style="{StaticResource CardStyle}" Grid.Row="0" Grid.Column="0" Background="#E8F5E9">
                            <TextBlock Text="Всего клиентов: 1,247" FontWeight="Bold" Foreground="#2E7D32" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Style="{StaticResource CardStyle}" Grid.Row="0" Grid.Column="1" Background="#FFEBEE">
                            <TextBlock Text="Просрочек: 23" FontWeight="Bold" Foreground="#C62828" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Style="{StaticResource CardStyle}" Grid.Row="0" Grid.Column="2" Background="#E3F2FD">
                            <TextBlock Text="Новых заявок: 15" FontWeight="Bold" Foreground="#1565C0" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Style="{StaticResource CardStyle}" Grid.Row="0" Grid.Column="3" Background="#FFF3E0">
                            <TextBlock Text="Одобрено: 78%" FontWeight="Bold" Foreground="#EF6C00" HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
