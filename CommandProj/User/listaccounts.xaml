<Window x:Class="CommandProj.User.listaccounts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreditFlow - Ваши кредиты" Height="700" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <!-- Ресурсы для стилей -->
    <Window.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек кредитов -->
        <Style x:Key="LoanCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Основной контейнер -->
        <ScrollViewer>
            <StackPanel Margin="20">

                <!-- Шапка профиля -->
                <Border Background="#2C3E50" CornerRadius="15" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Аватар и имя -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Ellipse Width="60" Height="60" Fill="#3498DB">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FFFFFF" Offset="0"/>
                                        <GradientStop Color="#BDC3C7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                            </Ellipse>
                            <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Иван Иванов" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="Кредитная история: Отличная" Foreground="#27AE60" FontSize="12" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Блок с общей кредитной нагрузкой -->
                        <Border Background="White" CornerRadius="10" Margin="0,20,0,0" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Общая кредитная нагрузка" Foreground="#7F8C8D" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Text="₽ 2,156,780.00" Foreground="#E74C3C" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>

                                <!-- Ежемесячный платеж -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                    <Path Data="M7 10l5 5 5-5" Stroke="#E74C3C" StrokeThickness="2" Stretch="Uniform" Width="12" Height="12"/>
                                    <TextBlock Text="Ежемесячно: ₽ 45,820.30" Foreground="#E74C3C" FontSize="12" Margin="5,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Быстрые действия -->
                <TextBlock Text="Управление кредитами" Foreground="#2C3E50" FontWeight="Bold" Margin="0,0,0,10"/>
                <UniformGrid Rows="1" Columns="2" Margin="0,0,0,20">
                    <Button Content="💳 Платеж" Style="{StaticResource RoundedButton}" Background="#27AE60"/>
                    <Button Content="📋 Заявка" Style="{StaticResource RoundedButton}" Background="#3498DB"/>
                </UniformGrid>

                <!-- Список кредитов -->
                <TextBlock Text="Мои кредиты" Foreground="#2C3E50" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Ипотека -->
                <Border Style="{StaticResource LoanCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#E74C3C" Width="40" Height="40" CornerRadius="20">
                                <TextBlock Text="🏠" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Ипотека" FontWeight="Bold"/>
                                <TextBlock Text="до 15.05.2040" Foreground="#7F8C8D" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="₽ 1,845,600.00" FontSize="18" FontWeight="Bold" Margin="0,10,0,0"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Ставка: 7.8%" Foreground="#E74C3C" FontSize="12" Grid.Column="0" Grid.Row="0"/>
                            <TextBlock Text="Платеж: ₽ 32,450.00" Foreground="#E74C3C" FontSize="12" Grid.Column="1" Grid.Row="0"/>
                            <TextBlock Text="Осталось: 17 лет" Foreground="#7F8C8D" FontSize="11" Grid.Column="0" Grid.Row="1" Margin="0,5,0,0"/>
                            <TextBlock Text="След. платеж: 15.12.2023" Foreground="#7F8C8D" FontSize="11" Grid.Column="1" Grid.Row="1" Margin="0,5,0,0"/>
                        </Grid>

                        <ProgressBar Value="35" Maximum="100" Height="8" Margin="0,10,0,0" Foreground="#E74C3C"/>
                        <TextBlock Text="Выплачено: ₽ 985,400.00 из ₽ 2,831,000.00" Foreground="#7F8C8D" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Автокредит -->
                <Border Style="{StaticResource LoanCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#3498DB" Width="40" Height="40" CornerRadius="20">
                                <TextBlock Text="🚗" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Автокредит" FontWeight="Bold"/>
                                <TextBlock Text="до 20.08.2027" Foreground="#7F8C8D" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="₽ 256,400.00" FontSize="18" FontWeight="Bold" Margin="0,10,0,0"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Ставка: 9.5%" Foreground="#3498DB" FontSize="12" Grid.Column="0" Grid.Row="0"/>
                            <TextBlock Text="Платеж: ₽ 8,920.00" Foreground="#3498DB" FontSize="12" Grid.Column="1" Grid.Row="0"/>
                            <TextBlock Text="Осталось: 3 года" Foreground="#7F8C8D" FontSize="11" Grid.Column="0" Grid.Row="1" Margin="0,5,0,0"/>
                            <TextBlock Text="След. платеж: 20.12.2023" Foreground="#7F8C8D" FontSize="11" Grid.Column="1" Grid.Row="1" Margin="0,5,0,0"/>
                        </Grid>

                        <ProgressBar Value="60" Maximum="100" Height="8" Margin="0,10,0,0" Foreground="#3498DB"/>
                        <TextBlock Text="Выплачено: ₽ 384,600.00 из ₽ 641,000.00" Foreground="#7F8C8D" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Потребительский кредит -->
                <Border Style="{StaticResource LoanCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#9B59B6" Width="40" Height="40" CornerRadius="20">
                                <TextBlock Text="💻" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Потребительский" FontWeight="Bold"/>
                                <TextBlock Text="до 10.03.2025" Foreground="#7F8C8D" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="₽ 54,780.00" FontSize="18" FontWeight="Bold" Margin="0,10,0,0"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Ставка: 12.9%" Foreground="#9B59B6" FontSize="12" Grid.Column="0" Grid.Row="0"/>
                            <TextBlock Text="Платеж: ₽ 4,450.30" Foreground="#9B59B6" FontSize="12" Grid.Column="1" Grid.Row="0"/>
                            <TextBlock Text="Осталось: 1 год" Foreground="#7F8C8D" FontSize="11" Grid.Column="0" Grid.Row="1" Margin="0,5,0,0"/>
                            <TextBlock Text="След. платеж: 10.12.2023" Foreground="#7F8C8D" FontSize="11" Grid.Column="1" Grid.Row="1" Margin="0,5,0,0"/>
                        </Grid>

                        <ProgressBar Value="75" Maximum="100" Height="8" Margin="0,10,0,0" Foreground="#9B59B6"/>
                        <TextBlock Text="Выплачено: ₽ 164,340.00 из ₽ 219,120.00" Foreground="#7F8C8D" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Кредитная карта -->
                <Border Style="{StaticResource LoanCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#E67E22" Width="40" Height="40" CornerRadius="20">
                                <TextBlock Text="💳" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Кредитная карта" FontWeight="Bold"/>
                                <TextBlock Text="● ● ● ● 7788" Foreground="#7F8C8D" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="₽ 45,000.00" FontSize="18" FontWeight="Bold" Margin="0,10,0,0"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Лимит: ₽ 300,000.00" Foreground="#7F8C8D" FontSize="12" Grid.Column="0" Grid.Row="0"/>
                            <TextBlock Text="Ставка: 23.9%" Foreground="#E67E22" FontSize="12" Grid.Column="1" Grid.Row="0"/>
                            <TextBlock Text="Миним. платеж: ₽ 2,250.00" Foreground="#E67E22" FontSize="11" Grid.Column="0" Grid.Row="1" Margin="0,5,0,0"/>
                            <TextBlock Text="Льготный период: 55 дн." Foreground="#27AE60" FontSize="11" Grid.Column="1" Grid.Row="1" Margin="0,5,0,0"/>
                        </Grid>

                        <ProgressBar Value="15" Maximum="100" Height="8" Margin="0,10,0,0" Foreground="#E67E22"/>
                        <TextBlock Text="Использовано: ₽ 45,000.00 из ₽ 300,000.00" Foreground="#7F8C8D" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Итоговая статистика -->
                <Border Background="White" CornerRadius="10" Padding="15" Margin="0,20,0,10">
                    <StackPanel>
                        <TextBlock Text="📊 Общая кредитная статистика" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Grid.Row="0">
                                <TextBlock Text="Общая задолженность" Foreground="#7F8C8D" FontSize="11"/>
                                <TextBlock Text="₽ 2,156,780.00" Foreground="#E74C3C" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Grid.Row="0">
                                <TextBlock Text="Ежемесячный платеж" Foreground="#7F8C8D" FontSize="11"/>
                                <TextBlock Text="₽ 45,820.30" Foreground="#E74C3C" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,10,0,0">
                                <TextBlock Text="Выплачено всего" Foreground="#7F8C8D" FontSize="11"/>
                                <TextBlock Text="₽ 1,534,340.00" Foreground="#27AE60" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,10,0,0">
                                <TextBlock Text="Общая переплата" Foreground="#7F8C8D" FontSize="11"/>
                                <TextBlock Text="₽ 487,560.00" Foreground="#E67E22" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Margin="0,10,0,0">
                                <TextBlock Text="Кредитная нагрузка: 32% от доходов" Foreground="#7F8C8D" FontSize="11" HorizontalAlignment="Center"/>
                                <ProgressBar Value="32" Maximum="100" Height="6" Margin="0,5,0,0" Foreground="#3498DB"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель навигации -->
        <Border Background="Gray" VerticalAlignment="Bottom" Height="60" BorderThickness="1,1,0,0" BorderBrush="#BDC3C7">
            <UniformGrid Rows="1" Columns="4">
                <Button Content="🏠" FontSize="16" Background="Transparent" BorderThickness="0"/>
                <Button Content="📊" FontSize="16" Background="Transparent" BorderThickness="0" Margin="0,0,-86,0"/>
                <Button Content="👤" FontSize="16" Background="Transparent" BorderThickness="0" Margin="68,0,-90,0"/>
            </UniformGrid>
        </Border>

    </Grid>
</Window>
