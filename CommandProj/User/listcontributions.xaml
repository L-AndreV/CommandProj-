<Window x:Class="CommandProj.User.listcontributions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InvestFlow - Ваши вклады" Height="700" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <!-- Ресурсы для стилей -->
    <Window.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек вкладов -->
        <Style x:Key="DepositCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Основной контейнер -->
        <ScrollViewer>
            <StackPanel Margin="20">

                <!-- Шапка профиля -->
                <Border Background="#2C3E50" CornerRadius="15" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Аватар и имя -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Ellipse Width="60" Height="60" Fill="#3498DB">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FFFFFF" Offset="0"/>
                                        <GradientStop Color="#BDC3C7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                            </Ellipse>
                            <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Иван Иванов" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="Инвестор Gold" Foreground="#F1C40F" FontSize="12" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Блок с общим балансом вкладов -->
                        <Border Background="White" CornerRadius="10" Margin="0,20,0,0" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Сумма вкладов" Foreground="#7F8C8D" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Text="₽ 2,450,780.00" Foreground="#2C3E50" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>

                                <!-- Доход за год -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                    <Path Data="M7 14l5-5 5 5" Stroke="#27AE60" StrokeThickness="2" Stretch="Uniform" Width="12" Height="12"/>
                                    <TextBlock Text="+ ₽ 187,420.50" Foreground="#27AE60" FontSize="12" Margin="5,0,0,0"/>
                                    <TextBlock Text="(7.6%)" Foreground="#27AE60" FontSize="12" Margin="5,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Быстрые действия -->
                <TextBlock Text="Управление вкладами" Foreground="#2C3E50" FontWeight="Bold" Margin="0,0,0,10"/>
                <UniformGrid Rows="1" Columns="2" Margin="0,0,0,20">
                    <Button Content="➕ Новый вклад" Style="{StaticResource RoundedButton}" Background="#27AE60"/>
                    <Button Content="📊 Аналитика" Style="{StaticResource RoundedButton}" Background="#3498DB"/>
                </UniformGrid>

                <!-- Список вкладов -->
                <TextBlock Text="Мои вклады" Foreground="#2C3E50" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Вклад 1 - Сберегательный -->
                <Border Style="{StaticResource DepositCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#27AE60" Width="40" Height="40" CornerRadius="20">
                                <TextBlock Text="💰" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Сберегательный+" FontWeight="Bold"/>
                                <TextBlock Text="до 31.12.2025" Foreground="#7F8C8D" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="₽ 850,000.00" FontSize="18" FontWeight="Bold" Margin="0,10,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="8.5% годовых" Foreground="#27AE60" FontSize="12" FontWeight="Bold"/>
                            <TextBlock Text="Ежемесячная выплата" Foreground="#7F8C8D" FontSize="10" Margin="10,0,0,0"/>
                        </StackPanel>
                        <ProgressBar Value="75" Maximum="100" Height="8" Margin="0,10,0,0" Foreground="#27AE60"/>
                        <TextBlock Text="Осталось 9 месяцев" Foreground="#7F8C8D" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Вклад 2 - Накопительный -->
                <Border Style="{StaticResource DepositCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#3498DB" Width="40" Height="40" CornerRadius="20">
                                <TextBlock Text="📈" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Накопительный PRO" FontWeight="Bold"/>
                                <TextBlock Text="до 15.06.2026" Foreground="#7F8C8D" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="₽ 1,200,450.00" FontSize="18" FontWeight="Bold" Margin="0,10,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="7.2% годовых" Foreground="#3498DB" FontSize="12" FontWeight="Bold"/>
                            <TextBlock Text="Капитализация" Foreground="#7F8C8D" FontSize="10" Margin="10,0,0,0"/>
                        </StackPanel>
                        <ProgressBar Value="40" Maximum="100" Height="8" Margin="0,10,0,0" Foreground="#3498DB"/>
                        <TextBlock Text="Осталось 1 год 6 месяцев" Foreground="#7F8C8D" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Вклад 3 - Пенсионный -->
                <Border Style="{StaticResource DepositCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#E67E22" Width="40" Height="40" CornerRadius="20">
                                <TextBlock Text="👵" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Пенсионный+" FontWeight="Bold"/>
                                <TextBlock Text="до 01.01.2030" Foreground="#7F8C8D" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="₽ 400,330.00" FontSize="18" FontWeight="Bold" Margin="0,10,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="6.8% годовых" Foreground="#E67E22" FontSize="12" FontWeight="Bold"/>
                            <TextBlock Text="Ежеквартальная выплата" Foreground="#7F8C8D" FontSize="10" Margin="10,0,0,0"/>
                        </StackPanel>
                        <ProgressBar Value="20" Maximum="100" Height="8" Margin="0,10,0,0" Foreground="#E67E22"/>
                        <TextBlock Text="Осталось 5 лет" Foreground="#7F8C8D" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Статистика доходности -->
                <Border Background="White" CornerRadius="10" Padding="15" Margin="0,20,0,10">
                    <StackPanel>
                        <TextBlock Text="📊 Общая доходность" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="За месяц" Foreground="#7F8C8D" FontSize="11"/>
                                <TextBlock Text="+ ₽ 15,240.80" Foreground="#27AE60" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="За год" Foreground="#7F8C8D" FontSize="11"/>
                                <TextBlock Text="+ ₽ 187,420.50" Foreground="#27AE60" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель навигации -->
        <Border Background="Gray" VerticalAlignment="Bottom" Height="60" BorderThickness="1,1,0,0" BorderBrush="#BDC3C7">
            <UniformGrid Rows="1" Columns="4">
                <Button Content="🏠" FontSize="16" Background="Transparent" BorderThickness="0"/>
                <Button Content="💰" FontSize="16" Background="Transparent" BorderThickness="0"/>
                <Button Content="📊" FontSize="16" Background="Transparent" BorderThickness="0"/>
                <Button Content="👤" FontSize="16" Background="Transparent" BorderThickness="0"/>
            </UniformGrid>
        </Border>

    </Grid>
</Window>
