<Window x:Class="CommandProj.User.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CoinFlow - Ваш профиль" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <!-- Ресурсы для стилей -->
    <Window.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Основной контейнер -->
        <ScrollViewer>
            <StackPanel Margin="20">

                <!-- Шапка профиля -->
                <Border Background="#2C3E50" CornerRadius="15" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Аватар и имя -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Ellipse Width="60" Height="60" Fill="#3498DB">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FFFFFF" Offset="0"/>
                                        <GradientStop Color="#BDC3C7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                            </Ellipse>
                            <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Иван Иванов" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="@ivan_finance" Foreground="#BDC3C7" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Блок с балансом -->
                        <Border Background="White" CornerRadius="10" Margin="0,20,0,0" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Общий баланс" Foreground="#7F8C8D" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Text="₽ 125,430.50" Foreground="#2C3E50" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>

                                <!-- Изменение за день -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                    <Path Data="M7 14l5-5 5 5" Stroke="#27AE60" StrokeThickness="2" Stretch="Uniform" Width="12" Height="12"/>
                                    <TextBlock Text="+ ₽ 2,345.60" Foreground="#27AE60" FontSize="12" Margin="5,0,0,0"/>
                                    <TextBlock Text="(1.9%)" Foreground="#27AE60" FontSize="12" Margin="5,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Быстрые действия -->
                <TextBlock Text="Быстрые действия" Foreground="#2C3E50" FontWeight="Bold" Margin="0,0,0,10"/>
                <UniformGrid Rows="1" Columns="3" Margin="0,0,0,20">
                    <Button Content="Пополнить" Style="{StaticResource RoundedButton}" Background="#27AE60"/>
                    <Button Content="Перевести" Style="{StaticResource RoundedButton}" Background="#3498DB"/>
                    <Button Content="История" Style="{StaticResource RoundedButton}" Background="#E74C3C"/>
                </UniformGrid>

                <!-- Счета и карты -->
                <TextBlock Text="Мои счета" Foreground="#2C3E50" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Основная карта -->
                <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="30" Height="30" Fill="#E74C3C"/>
                            <TextBlock Text="Tinkoff Black" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="● ● ● ●  1234" Foreground="#7F8C8D" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="₽ 78,900.00" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Накопительный счет -->
                <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="30" Height="30" Fill="#3498DB"/>
                            <TextBlock Text="Накопительный" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="₽ 46,530.50" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
                        <TextBlock Text="+ 5% годовых" Foreground="#27AE60" FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- Недавние транзакции -->
                <TextBlock Text="Недавние операции" Foreground="#2C3E50" FontWeight="Bold" Margin="0,20,0,10"/>

                <ListView Background="Transparent" BorderThickness="0">
                    <ListViewItem>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#27AE60" Width="40" Height="40" CornerRadius="20">
                                <TextBlock Text="🍔" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="McDonalds" FontWeight="Bold"/>
                                <TextBlock Text="Сегодня, 12:30" Foreground="#7F8C8D" FontSize="12"/>
                            </StackPanel>
                            <TextBlock Text="- ₽ 450.00" Foreground="#E74C3C" FontWeight="Bold" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#3498DB" Width="40" Height="40" CornerRadius="20">
                                <TextBlock Text="💰" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Зарплата" FontWeight="Bold"/>
                                <TextBlock Text="Вчера, 09:00" Foreground="#7F8C8D" FontSize="12"/>
                            </StackPanel>
                            <TextBlock Text="+ ₽ 85,000.00" Foreground="#27AE60" FontWeight="Bold" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>

            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель навигации -->
        <Border Background="Gray" VerticalAlignment="Bottom" Height="60" BorderThickness="1,1,0,0" BorderBrush="#BDC3C7">
            <UniformGrid Rows="1" Columns="4">
                <Button Content="🏠" FontSize="16" Background="Transparent" BorderThickness="0"/>
                <Button Content="💳" FontSize="16" Background="Transparent" BorderThickness="0"/>
                <Button Content="📊" FontSize="16" Background="Transparent" BorderThickness="0"/>
                <Button Content="👤" FontSize="16" Background="Transparent" BorderThickness="0"/>
            </UniformGrid>
        </Border>

    </Grid>
</Window>
