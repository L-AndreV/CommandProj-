<Window x:Class="CommandProj.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreditFlow - Авторизация" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стили -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputField" TargetType="TextBox">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="PasswordField" TargetType="PasswordBox">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="LinkText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#3498DB"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SocialButton" TargetType="Button">
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для полей с placeholder -->
        <Style x:Key="PlaceholderTextBox" TargetType="TextBox" BasedOn="{StaticResource InputField}">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть - баннер -->
        <Border Background="#2C3E50" Grid.Column="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border CornerRadius="20" Background="#34495E" Padding="30" Margin="20">
                    <StackPanel>
                        <TextBlock Text="🔐" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="Bank TOP" Foreground="White" FontSize="28" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Кредитная платформа" Foreground="#BDC3C7" FontSize="16" 
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="Войдите в вашу учетную запись" 
                                   Foreground="White" FontSize="14" TextWrapping="Wrap" 
                                   HorizontalAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Статистика безопасности -->
                <StackPanel Margin="40" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="🛡️" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Защищенное соединение SSL" Foreground="White" FontSize="13"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="👥" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Более 1000 сотрудников онлайн" Foreground="White" FontSize="13"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="⏰" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Круглосуточная поддержка" Foreground="White" FontSize="13"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✅" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Двухфакторная аутентификация" Foreground="White" FontSize="13"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Правая часть - форма авторизации -->
        <Border Background="White" Grid.Column="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40" VerticalAlignment="Center">
                    <TextBlock Text="Вход в систему" Foreground="#2C3E50" FontSize="24" FontWeight="Bold" 
                               Margin="0,0,0,30" HorizontalAlignment="Center"/>

                    <!-- Поля ввода -->
                    <TextBox Style="{StaticResource PlaceholderTextBox}" 
                             Text="Электронная почта или логин" Foreground="Gray"/>

                    <PasswordBox Style="{StaticResource PasswordField}" 
                                 PasswordChar="•">
                        <PasswordBox.Tag>
                            <TextBlock Text="Пароль" Foreground="Gray"/>
                        </PasswordBox.Tag>
                    </PasswordBox>

                    <!-- Дополнительные опции -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" Style="{StaticResource CheckBoxStyle}">
                            <TextBlock Text="Запомнить меня" Foreground="#2C3E50"/>
                        </CheckBox>

                        <TextBlock Grid.Column="1" Style="{StaticResource LinkText}" Text="Забыли пароль?" 
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Кнопка входа -->
                    <Button Content="Войти" Style="{StaticResource RoundedButton}" 
                            Background="#27AE60" FontSize="16" Height="50" Margin="0,0,0,20"/>

                    <!-- Разделитель -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#BDC3C7" Height="1" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="или" Foreground="#7F8C8D" FontSize="12" 
                                   Margin="10,0" VerticalAlignment="Center"/>
                        <Border Grid.Column="2" Background="#BDC3C7" Height="1" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Социальные сети -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <Button Style="{StaticResource SocialButton}" Content="Google" Width="100">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="G" FontWeight="Bold" Margin="0,0,5,0"/>
                                        <TextBlock Text="Google"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button Style="{StaticResource SocialButton}" Content="Microsoft" Width="100" Margin="10,0">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="M" FontWeight="Bold" Margin="0,0,5,0"/>
                                        <TextBlock Text="Microsoft"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>

                    <!-- Ссылка на регистрацию -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Нет аккаунта? " Foreground="#7F8C8D" FontSize="12"/>
                        <TextBlock Style="{StaticResource LinkText}" Text="Зарегистрироваться"/>
                    </StackPanel>

                    <!-- Информация о безопасности -->
                    <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="ℹ️ Последний вход: 15.12.2023 14:30" Foreground="#1565C0" FontSize="11"/>
                            <TextBlock Text="С вашего IP: 192.168.1.1" Foreground="#3498DB" FontSize="10"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>